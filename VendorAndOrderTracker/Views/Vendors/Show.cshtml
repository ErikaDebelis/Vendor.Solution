<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Show Vendors</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Zen+Tokyo+Zoo&display=swap" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="container">
      @using VendorAndOrderTracker.Models;

      <h3>Orders for this vendor:</h3>

      <ol>
        @foreach (Order newOrder in @Model["orderList"])
        {
          <li><a href='/vendors/@Model["vendor"].Id/newOrder/@order.Id'>@order.Title</a></li>
        }
      </ol>

      <p><a href='/vendors/@Model["vendor"].Id/newOrder/new'>Add a new order</a></p>
      <p><a href='/vendors'>Return to the vendor list</a></p>
      <p><a href='/'>Return to Main Page</a></p>
    </div>
  </body>
</html>